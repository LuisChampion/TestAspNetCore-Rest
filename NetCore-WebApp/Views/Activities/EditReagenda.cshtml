@model Entities.Activity

@{
    ViewData["Title"] = "Reagendar Actividad";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> listProperties = (List<SelectListItem>)ViewBag.PropertyItems;    
    
}


<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            <form method="post" asp-action="Reagenda">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Property_Id" class="control-label"></label>
                    @*<input asp-for="Property_Id" class="form-control" />*@
                    @*@Html.DropDownList("lstProperties",listProperties, new { @class="form-control" })*@
                    <select id="drpPropList" class="form-control" asp-for="Property_Id" asp-items="@(new SelectList(listProperties, "Value", "Text"))" disabled>
                        <option value="">--Select--</option>
                    </select>
                    <input type="hidden" asp-for="Property_Id" />
                    <span asp-validation-for="Property_Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Schedule" class="control-label"></label>
                    <input asp-for="Schedule" class="form-control" />
                    
                    <span asp-validation-for="Schedule" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" disabled />
                    <input type="hidden" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" disabled />
                    <input type="hidden" asp-for="Status" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Regresar a la lista de Actividades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
